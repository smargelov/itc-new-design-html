mixin col(colName, arr, boolean)
   if !boolean
       .b-smm-table__col.-val= arr[colName]
   else
       .b-smm-table__col.-val
           if arr[colName] && arr[colName] !== ''
               +icon('check27', 'smm-table__check', 27)
           else
               | —

section.section
    .b-smm-price
        h2.h2._title Продвижение в социальных сетях #[span SMM + таргет]
        .b-smm-table._table
            ._header
                ._col.-empty.-head
                ._col.-head Старт
                ._col.-head Оптима
                ._col.-head VIP
            ._body
                each section in table
                    ._section
                        ._name(
                            class= section.collapsed ? 'smm-table__name--collapsed close' : null
                        )
                            | #{section.name}
                            if section.collapsed
                                +icon('collapse-arrow', null, 29, 15)._collapse-arrow.close
                        ._rows
                            each row in section.list
                                ._row
                                    ._col.-title= row.title
                                    +col('start', row, row.boolean)
                                    +col('optima', row, row.boolean)
                                    +col('vip', row, row.boolean)
            ._footer
                ._col.-foot.-title
                    ._foot-title Ежемесячная абонентская плата
                    ._foot-desc (скидка 10% при оплате за 3 месяца)
                ._col.-foot
                    ._foot-price 28 000 ₽
                    button._btn.btn.btn--flat.btn--blue Заказать
