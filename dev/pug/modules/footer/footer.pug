include ../../utils/data

footer.b-footer
    
    ._menu
        ul.b-footer-services-list._services-list
            each item in newMega
                li._item
                    a._link(href=item.link, title=item.name, class=!item.link ? 'footer-services-list__link--empty' : '')
                        | #{item.name}
                        if item.sub
                            span._mob-plus
                    if item.sub
                        ul._sublist
                            each subItem in item.sub
                                li._subitem
                                    a._subitem-link(href=subItem.link, title=subItem.name)= subItem.name
    .b-footer-second-menu._menu
    ._col
        ._copy © 2010–2020, ITC MEDIA агентство интернет-маркетинга #[a(href="mailto:manager@itc-media.ru") manager@itc-media.ru]

    ._col
        ._social
            each icon in socialIcons
                a(href= icon.link, title= icon.name)._icon
                    +icon(icon.icon, 'footer__social-icon')

// Up button
a.up-button.b-btn.-flat Наверх

// Popups

.overlay
.b-popup
    ._close
        +icon('close', 'popup__icon-close')
    #consultation.consultation
        h4.h4._title Свяжитесь с нами
        form.b-contacts-form._form
            textarea(placeholder='Опишите идею или ситуацию', name='message')._textarea
            input(type='text' name='user-name', placeholder='Имя')._input
            input(type='tel' name='user-phone', placeholder='Телефон')._input.-phone
            input(type='checkbox', id='consultation-approve', name='approve' checked)._checkbox
            label(for='consultation-approve')._label Даю согласие на обработку своих персональных данных и соглашаюсь с политикой конфиденциальности
            input(type='submit', value='Отправить').b-btn.-flat._btn
