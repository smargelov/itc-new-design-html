section.section
    .b-topcases
        h2.h2._title Наши кейсы
        ._wrap
            ul._tabs
                each tab, index in topCases
                    li.b-topcases-tab._tab(data-case-target='tab-' + (index + 1), class= index === 0 ? 'topcases-tab--active': '')
                        ._content
                            ._title= tab.name
                            ._cols(class= tab.cols.length < 2 ? 'topcases-tab__cols--single': '')
                                each col in tab.cols
                                    ._col
                                        ._num= col.num
                                        ._desc !{col.desc}

            ul._cards
                each card, index in topCases
                    - let isCaruosel = card.images.length > 1
                    li.b-topcases-card._card(class='tab-' + (index + 1), class= index === 0 ? 'topcases-card--active': '')
                        ._left
                            ._images(class= isCaruosel ? 'owl-carousel owl-theme': '')
                                each img in card.images
                                    a(
                                        data-fancybox="images" + index
                                        href= img
                                    )
                                        img(src= img)._img
                        ._right
                            ._content
                                ._text= card.text
                                button.b-btn.-flat.-light._btn Смотреть кейс
